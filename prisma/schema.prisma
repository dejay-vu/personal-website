generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Category {
  slug  String @id
  name  String
  posts Post[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("categories")
}

model Post {
  id                    Int        @id @default(autoincrement())
  slug                  String     @unique
  url                   String     @unique
  coverImageURL         String
  coverImageBlurDataURL String
  title                 String
  abstract              String
  date                  DateTime   @default(now())
  wordCount             Int
  readingTime           Int
  categories            Category[]
  published             Boolean    @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("posts")
}

model Place {
  photos    Photo[]
  country   String
  area      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([country, area])
  @@map("places")
}

model Photo {
  id           String  @id @default(cuid())
  slug         String  @unique
  url          String  @unique
  thumbnailURL String
  blurDataURL  String
  countrySlug  String
  areaSlug     String
  title        String  @default("untitled")
  isCover      Boolean @default(false)

  // Place info
  place        Place  @relation(fields: [placeCountry, placeArea], references: [country, area])
  placeCountry String
  placeArea    String

  // EXIF info
  fileType              String?
  make                  String?
  model                 String?
  orientation           String?
  height                Int?
  width                 Int?
  brightness            String?
  exposureBias          String?
  exposureTime          String?
  exposureMode          String?
  exposureProgram       String?
  fNumber               String?
  focalLength           String?
  focalLengthIn35mmFilm String?
  iso                   String?
  lensMake              String?
  lensModel             String?
  dateTime              DateTime?
  dateTimeOriginal      DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("photos")
}
